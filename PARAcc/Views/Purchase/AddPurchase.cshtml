@model PurchaseViewModel
@{
	ViewBag.Title = "Add Purchase";
	ViewBag.pTitle = "Add Purchase";
	ViewBag.pageTitle = "Purchase";
}

<div class="row">
	<div class="col-lg-12">
		<div class="card">
			<div class="card-body">
					@await Html.PartialAsync("~/Views/Purchase/_PurchasePartialView/_AddPurchaseForm.cshtml",Model.PurchaseDetTb)
				<div class="modal fade" id="exampleModalScrollable" tabindex="-1" role="dialog" aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
					<div class="modal-dialog modal-dialog-scrollable">
						<div class="modal-content">
							<div class="modal-header">
								<h5 class="modal-title" id="exampleModalScrollableTitle">Select Product</h5>
								<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
							</div>
							<div class="modal-body">
								<div class="table-responsive">
									<table class="table table-sm mb-0">
										<thead class="poptablehead">
											<tr>
												<th>Prod. Code</th>
												<th>Prod. Descr</th>
												<th>Unit</th>
												<th>Active Cost</th>
												<th>Unit Price</th>
												<th>Barcode</th>
											</tr>
										</thead>
										<tbody class="PurchPopBody">
											@await Html.PartialAsync("~/Views/Purchase/_PurchasePartialView/_ProductTbLoad.cshtml",Model.InvItms)
										</tbody>
									</table>
								</div>
							</div>
							<div class="modal-footer">
								<select class="form-select form-select-sm" id="searchSelect" style="width:auto">
									<option value="1" selected>ItemCode</option>
									<option value="2">Description</option>
									<option value="3">Unit</option>
									<option value="4">ActiveCost</option>
									<option value="5">UnitCost</option>
									<option value="6">Barcode</option>
								</select>
								<div class="form-inline float-md-end">
									<div class="search-box ms-2">
										<div class="position-relative">
											<input type="text" id="searchBox" class="form-control form-control-sm rounded" placeholder="Search...">
											<i class="mdi mdi-magnify search-icon" style="line-height:28px"></i>
										</div>
									</div>
								</div>
								<button type="button" class="btn btn-light waves-effect" data-bs-dismiss="modal">Close</button>
							</div>
						</div>
					</div>
				</div>

				<div class="table-responsive mb-2" style="height:200px">
					<table class="table table-sm table-rounded table-editable table-nowrap align-middle table-edits ">
						<thead class="bg-dark" style="font-size:medium; height:40px;vertical-align: middle;">
							<tr class="text-light">
								<th>SlNo</th>
								<th>Prod. Code</th>
								<th>Prod. Name/Descr</th>
								<th>IsRtn</th>
								<th>Unit</th>
								<th>Quantity</th>
								<th>FOC</th>
								<th>Cost/Unit</th>
								<th>Line Total</th>
								<th>Disc %</th>
								<th>Discount</th>
								<th>Is%</th>
								<th>Net Cost/Unit</th>
								<th>Act S.Price</th>
								<th>FOC mapping</th>
								<th>FOC CostMapg</th>
								<th>Expiry</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							@await Html.PartialAsync("~/Views/Purchase/_PurchasePartialView/_PurchaseTableView.cshtml", Model.PurchaseDetTbItm)
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
<script src="~/assets/libs/jquery/jquery.min.js" asp-append-version="true"></script>
<script src="~/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/assets/libs/metismenu/metisMenu.min.js" asp-append-version="true"></script>
<script src="~/assets/libs/simplebar/simplebar.min.js" asp-append-version="true"></script>
<script src="~/assets/libs/node-waves/waves.min.js" asp-append-version="true"></script>
<!-- toastr plugin -->
<script src="~/assets/libs/toastr/build/toastr.min.js"></script>
<!-- toastr init -->
<script src="~/assets/js/pages/toastr.init.js"></script>
<script src="~/assets/js/app.js" asp-append-version="true"></script>
<script src="~/assets/js/VzPages/AddPurchase.js" asp-append-version="true" ></script>
