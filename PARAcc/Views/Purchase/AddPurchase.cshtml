<div class="row">
	<div class="col-lg-12">
		<div class="card">
			<div class="card-body">
				<form>
					<div class="row mb-2">
						<div class="col-lg-2">
							<label class="col-form-label-sm">
								Prod.Code
							</label>							
						</div>
						<div class="col-lg-4 mb-1 mb-0-lg">
							<select class="form-control form-control-sm select2">
								<option>Prod. Code</option>
								<optgroup label="Alaskan/Hawaiian Time Zone">
									<option value="AK">Alaska</option>
									<option value="HI">Hawaii</option>
								</optgroup>
							</select>
                        </div>
						<div class="col-lg-6">
							<input class="form-control form-control-sm" placeholder="Prod. Descr"/>
						</div>

						<!--Unit-->
						 <div class="col-lg-2 ">
							<label class="col-form-label-sm">
								Unit
							</label>
						</div>
						<div class="col-lg-4">
							<input class="form-control form-control-sm"/>
						</div>
						<div class="col-lg-1 ">
							<div class="form-check form-check-right">
								<input class="form-check-input" type="checkbox" id="formCheckRight2">
								<label class="form-check-label col-form-label-sm" for="formCheckRight2">
									IsRtn
								</label>
							</div>
						</div>
						<div class="col-lg-5"></div>
						<div class="col-lg-2">
							<label class="col-form-label-sm">Quantity</label>
						</div>
						<div class="col-lg-4">
							<input class="form-control form-control-sm" />
						</div>
						<div class="col-lg-6"></div>
						<!--FOC-->
						<div class="col-lg-2">
							<label class="col-form-label-sm">FOC</label>
						</div>
						<div class="col-lg-4">
							<input class="form-control form-control-sm" placeholder="0.000" />
						</div>
						<!--Cost/Unit-->
						<div class="col-lg-2">
							<label class="col-form-label-sm">Cost/ Unit</label>
						</div>
						<div class="col-lg-4">
							<input class="form-control form-control-sm" placeholder="0.00" />
						</div>
						
						<!--Disc %-->
						<div class="col-lg-2">
							<label class="col-form-label-sm">Discount Percentage</label>
						</div>
						<div class="col-lg-4">
							<input class="form-control form-control-sm" placeholder="0.00" />
						</div>
						<!--LineTotal-->
						<div class="col-lg-2">
							<label class="col-form-label-sm">Line Total</label>
						</div>
						<div class="col-lg-4">
							<input class="form-control form-control-sm" placeholder="0.00" />
						</div>
						<!--Discount-->
						<div class="col-lg-2">
							<label class="col-form-label-sm">Discount</label>
						</div>
						<div class="col-lg-4">
							<input class="form-control form-control-sm" placeholder="0.0000" />
						</div>
						<div class="col-lg-1 ">
							<div class="form-check form-check-right">
								<input class="form-check-input" type="checkbox" id="formCheckRight2"
									   checked>
								<label class="form-check-label col-form-label-sm" for="formCheckRight2">
									Is%
								</label>
							</div>
						</div>
						<div class="col-lg-5"></div>
						<!--NETCost-->
						<div class="col-lg-2">
							<label class="col-form-label-sm">Net Cost/ Unit</label>
						</div>
						<div class="col-lg-4">
							<input class="form-control form-control-sm" placeholder="0.00" />
						</div>
						<div class="col-lg-2">
							<label class="col-form-label-sm">Act S.Price</label>
						</div>
						<div class="col-lg-4">
							<input class="form-control form-control-sm" placeholder="0.00" />
						</div>
						<!--FOCMapg-->
						<div class="col-lg-2">
							<label class="col-form-label-sm">FOC Mapping</label>
						</div>
						<div class="col-lg-4">
							<input class="form-control form-control-sm" />
						</div>
					</div>
					<div class="row mb-2">
						<div class="col-lg-12">
							<div class="float-end">
								<button class="btn btn-danger waves-light btn-sm">Clear</button>
								<button class="btn btn-outline-dark waves-light btn-sm">Submit</button>
							</div>
						</div>
					</div>
				</form>
				<div class="table-responsive mb-2" style="height:200px">
					<table class="table table-rounded table-editable table-nowrap align-middle table-edits ">
						<thead class="bg-dark">
							<tr class="text-light">
								<th>SlNo</th>
								<th>Prod. Code</th>
								<th>Prod. Name/Descr</th>
								<th>IsRtn</th>
								<th>Unit</th>
								<th>Quantity</th>
								<th>FOC</th>
								<th>Cost/Unit</th>
								<th>Line Total</th>
								<th>Disc %</th>
								<th>Discount</th>
								<th>Is%</th>
								<th>Net Cost/Unit</th>
								<th>Act S.Price</th>
								<th>FOC mapping</th>
								<th>FOC CostMapg</th>
								<th>Expiry</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							<tr data-id="1">
								<td data-field="id" style="width: 80px">1</td>
								<td data-field="name">David McHenry</td>
								<td data-field="age">24</td>
								<td data-field="gender">Male</td>

								<td data-field="age">24</td>
								<td data-field="gender">Male</td>

								<td data-field="age">24</td>
								<td data-field="gender">Male</td>

								<td data-field="age">24</td>
								<td data-field="gender">Male</td>
								<td data-field="age">24</td>
								<td data-field="gender">Male</td>

								<td data-field="age">24</td>
								<td data-field="gender">Male</td>
								<td data-field="gender">Male</td>

								<td data-field="age">24</td>
								<td data-field="gender">Male</td>
								<td>
									<a class="btn btn-outline-secondary btn-sm edit" title="Edit">
										<i class="fas fa-pencil-alt"></i>
									</a>
									<a class="btn btn-outline-danger btn-sm delete" title="Delete">
										<i class="fas fa-trash-alt"></i>
									</a>
								</td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
