@model PurchaseDetTb

<form class="AddPurchaseForm">
	<div class="row mb-2">
		<div class="col-lg-2">
			<label class="col-form-label-sm">
				Prod.Code
			</label>
		</div>
		<div class="col-lg-4 mb-1 mb-0-lg">
			<input class="form-control form-control-sm"  asp-for="Code"  onclick="openProdModal()" placeholder="Prod. Code" />
		</div>
		<div class="col-lg-6">
			<input class="form-control form-control-sm" asp-for="ProdDesr" placeholder="Prod. Descr" />
		</div>
		<!--Unit-->
		<div class="col-lg-2 ">
			<label class="col-form-label-sm">
				Unit
			</label>
		</div>
		<div class="col-lg-4">
			<input class="form-control form-control-sm" asp-for="Unit" />
		</div>
		<div class="col-lg-1 ">
			<div class="form-check form-check-right">
				<input class="form-check-input" asp-for="IsRtn" type="checkbox" id="formCheckRight2">
				<label class="form-check-label col-form-label-sm" for="formCheckRight2">
					IsRtn
				</label>
			</div>
		</div>
		<div class="col-lg-5"></div>
		<div class="col-lg-2">
			<label class="col-form-label-sm">Quantity</label>
		</div>
		<div class="col-lg-4">
			<input class="form-control form-control-sm" asp-for="Qty" value="@Model.Qty?.ToString("0.00")" />
		</div>
		<div class="col-lg-6"></div>
		<!--FOC-->
		<div class="col-lg-2">
			<label class="col-form-label-sm">FOC</label>
		</div>
		<div class="col-lg-4">
			<input class="form-control form-control-sm" placeholder="0.000" asp-for="FOC" value="@Model.FOC?.ToString("0.000")" />
		</div>
		<!--Cost/Unit-->
		<div class="col-lg-2">
			<label class="col-form-label-sm">Cost/ Unit</label>
		</div>
		<div class="col-lg-4">
			<input class="form-control form-control-sm" placeholder="0.00" asp-for="Cost" value="@Model.Cost?.ToString("0.00")" />
		</div>

		<!--Disc %-->
		<div class="col-lg-2">
			<label class="col-form-label-sm">Discount Percentage</label>
		</div>
		<div class="col-lg-4">
			<input class="form-control form-control-sm" placeholder="0.00" asp-for="Discpercent" value="@Model.Discpercent?.ToString("0.00")" />
		</div>
		<!--LineTotal-->
		<div class="col-lg-2">
			<label class="col-form-label-sm">Line Total</label>
		</div>
		<div class="col-lg-4">
			<input class="form-control form-control-sm" placeholder="0.00" asp-for="Linetotal" value="@Model.Linetotal?.ToString("0.00")" />
		</div>
		<!--Discount-->
		<div class="col-lg-2">
			<label class="col-form-label-sm">Discount</label>
		</div>
		<div class="col-lg-4">
			<input class="form-control form-control-sm" placeholder="0.0000" asp-for="Discount" value="@Model.Discount?.ToString("0.0000")" />
		</div>
		<div class="col-lg-1 ">
			<div class="form-check form-check-right">
				<input class="form-check-input" type="checkbox" id="formCheckRight2" asp-for="Ispercent"
					   checked>
				<label class="form-check-label col-form-label-sm" for="formCheckRight2">
					Is%
				</label>
			</div>
		</div>
		<div class="col-lg-5"></div>
		<!--NETCost-->
		<div class="col-lg-2">
			<label class="col-form-label-sm">Net Cost/ Unit</label>
		</div>
		<div class="col-lg-4">
			<input class="form-control form-control-sm" placeholder="0.00" asp-for="NetCost" value="@Model.NetCost?.ToString("0.00")" />
		</div>
		<div class="col-lg-2">
			<label class="col-form-label-sm">Act S.Price</label>
		</div>
		<div class="col-lg-4">
			<input class="form-control form-control-sm" placeholder="0.00" asp-for="ActS_Price" value="@Model.ActS_Price?.ToString("0.00")" />
		</div>
		<!--FOCMapg-->
		<div class="col-lg-2">
			<label class="col-form-label-sm">FOC Mapping</label>
		</div>
		<div class="col-lg-4">
			<input class="form-control form-control-sm" asp-for="FOCMapg"/>
		</div>
	</div>
	<div class="row mb-2">
		<div class="col-lg-12">
			<div class="float-end">
				<button class="btn btn-danger waves-light btn-sm">Clear</button>
				<button class="btn btn-outline-dark waves-light btn-sm">Submit</button>
			</div>
		</div>
	</div>
</form>