                CurrentPageSelectionChanged="TabBarViewCurrentPageChanged"/>
            <Rectangle
                x:Name="bottomBackgroundRectangle"
                Background="{StaticResource Primary}"
                VerticalOptions="End"/>
        </Grid>-->
    <!--</simpleShell:SimpleShell.RootPageContainer>-->
</Shell>
